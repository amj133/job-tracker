<%= form_for(@job) do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>

  <%= f.label :description %>
  <%= f.text_area :description %><br><br>

  <%= f.label :level_of_interest %>
  <%= f.number_field :level_of_interest %><br><br>

  <%= f.label :city %>
  <%= f.text_field :city %><br><br>

  <%= f.label "Category" %>
  <%= select(:job, :category_id, options_for_select(
      @categories.map do |category|
        [category.title, category.id]
      end)) %><br><br>

  <%= f.submit %>
<% end %>
