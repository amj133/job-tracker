All Jobs for <strong><%= @company.name %></strong>

<% @jobs.each do |job| %>
  <ul>
    <li><%= link_to job.title, company_job_path(@company, job) %> at <%= job.company.name %></li>
    <p><%= link_to 'Edit', edit_company_job_path(@company, job) %></p>
    <p><%= link_to 'Delete', company_job_path(@company, job), method: :delete, data: {confirm: "Really delete the job?"} %></p>
  </ul>
<% end %>
