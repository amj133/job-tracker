<div class='category'>
  <h3>Category: <%= @category.title %></h1>

  <ul>
    <% @jobs.each do |job| %>
      <li>
        <%= link_to job.title, job_path(job) %>&nbsp;-&nbsp;<%= job.company.name %>
      </li>
    <% end %>
  </ul>


  <p><%= link_to 'Back to All Categories', categories_path %></p>
</div>
